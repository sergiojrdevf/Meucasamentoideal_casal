.woocommerce-top-bar {
	text-align: right;
	background: #333;
    height: 40px;
    line-height: 40px;
	a {
	    color: #fff;
	    font-weight: lighter;
	    font-size: 16px; 
	    display: inline-block;
	    padding: 0 10px;
	    @media (max-width: max_sm) {
		    span {
		    	// display: none;
		    }
	    }
	}
}


.tab-bottom {
	position: relative;
	margin-bottom: 40px;
	&:after {
		position: absolute;
		content: '';
		width: 40px;
		height: 3px;
		background: var(--color_theme);
		left: 0;
		bottom: -12px;
	}
}

.title-descr {
    color: #5a5a5a;
    font-size: 30px;
    font-weight: bold;
    line-height: 1.3;
}
	
.box {
	.fa {
		color: var(--color_theme);
		font-size: 25px;
	}
	&-title {
		color: var(--color_theme);
	    font-size: 20px;
	    font-weight: 600;
	    margin: 10px 0;
	}
	.title-descr {
		margin-bottom: 30px;
	}
	&-item {
		margin-bottom: 40px;
	}
}


// Tema
.product-categories {
	li {
		a {
			color: #565656;
			margin-bottom: 7px;
			display: block;
			&:before {
				content: '\f06b';
				font-family: FontAwesome;
				font-weight: normal;
				font-style: normal;
				margin:0px 10px 0px 0px;
				text-decoration:none;
			}
		}
	}
}

.woocommerce-additional-fields,
.woocommerce-info,
.woocommerce-account-fields {
	display: none;
}